<com.hohenheim.view.IFToolBar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_bar_height"
    android:clipToPadding="true"
    android:background="@color/theme_main"
    >

    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:paddingTop="@dimen/bar_padding_top"
        android:layout_height="@dimen/title_bar_height"
        >

        <ImageView
            android:id="@+id/iv_title_back_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@drawable/common_navbar_btn_bg_selector"
            android:paddingLeft="3dp"
            android:layout_marginLeft="6dip"
            android:paddingRight="3dp"
            android:src="@drawable/common_navbar_btn_bg_selector"
            />

        <TextView
            android:id="@+id/tv_title_back_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/iv_title_back_button"
            android:layout_toRightOf="@+id/iv_title_back_button"
            android:clickable="true"
            android:singleLine="true"
            android:textColor="@color/common_titleText_color"
            android:textSize="@dimen/title_bar_left_text"
            android:text="dfafd"

            />

        <Button
            android:id="@+id/btn_title_left_button"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:background="@null"
            android:contentDescription="@null"
            android:minWidth="45dp"
            android:paddingLeft="18dp"
            android:paddingRight="8dp"
            android:singleLine="true"
            android:textColor="@color/common_titlebar_back_color"
            android:textSize="@dimen/title_bar_title_text"
            android:visibility="gone"
            />


        <Button
            android:id="@+id/btn_title_left"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:background="@null"
            android:contentDescription="@null"
            android:singleLine="true"
            android:textColor="@color/common_titlebar_back_color"
            android:textSize="@dimen/title_bar_title_text"
            />

        <TextView
            android:id="@+id/tv_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:contentDescription="@null"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/common_titleText_color"
            android:textSize="@dimen/title_bar_title_text"/>

        <ImageView
            android:id="@+id/iv_title_right_image_button"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"

            android:layout_marginRight="4dp"
            android:contentDescription="@null"
            android:scaleType="centerInside"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/iv_title_right_image"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:contentDescription="@null"
            android:scaleType="centerInside"
            />


        <Button
            android:id="@+id/btn_title_right_button"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:contentDescription="@null"
            android:minWidth="45dp"
            android:paddingLeft="8dp"
            android:paddingRight="18dp"
            android:singleLine="true"
            android:textColor="@color/title_bar_right_btn_text_color"
            android:textSize="@dimen/text_size_lsp"
            android:visibility="gone"/>

    </RelativeLayout>

</com.hohenheim.view.IFToolBar>