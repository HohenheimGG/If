<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.GuideActivity"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"

        android:id="@+id/fr_layout_module"
        >

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/navigationBarColor"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        >

        <com.hohenheim.view.IconView
            style="@style/icon_view_bottom"
            app:icon_icon="@drawable/nav_recommend"
            app:icon_unfocus_color="@color/navigationBarTransColor"
            app:icon_focus_color="@color/white"
            android:id="@+id/iv_label_recommend"
            />

        <com.hohenheim.view.IconView
            style="@style/icon_view_bottom"
            app:icon_icon="@drawable/nav_tool"
            app:icon_unfocus_color="@color/navigationBarTransColor"
            app:icon_focus_color="@color/white"
            android:id="@+id/iv_label_tool"
            />

    </LinearLayout>

</FrameLayout>
