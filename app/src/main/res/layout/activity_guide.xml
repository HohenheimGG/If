<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.GuideActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/a_6"
        android:background="@color/theme_main"
        android:orientation="horizontal"
        android:layout_gravity="top"
        >

        <com.hohenheim.view.IconView
            style="@style/icon_view_bottom"
            app:icon_icon="@drawable/nav_recommend"
            app:icon_unfocus_color="@color/navigationBarTransColor"
            app:icon_focus_color="@color/white"
            android:id="@+id/iv_label_recommend"
            />

        <com.hohenheim.view.IconView
            style="@style/icon_view_bottom"
            app:icon_icon="@drawable/nav_tool"
            app:icon_unfocus_color="@color/navigationBarTransColor"
            app:icon_focus_color="@color/white"
            android:id="@+id/iv_label_tool"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/a_6"
        >
        <com.hohenheim.view.TabIndicator
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_weight="1"
            app:unfocus_color="@color/theme_main"
            app:focus_color="@color/navigationBarColor"
            android:id="@+id/ti_recommend"
            />
        <com.hohenheim.view.TabIndicator
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_weight="1"
            app:unfocus_color="@color/theme_main"
            app:focus_color="@color/navigationBarColor"
            android:id="@+id/ti_tool"
            />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/a_6.6"
        android:id="@+id/view_page"
        />
</FrameLayout>
