<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="@dimen/a_7.5"
             android:padding="@dimen/a"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rectangle_tool_container"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:maxLines="1"
            android:id="@+id/tv_tool_content"
            />

        <com.hohenheim.view.IconView
            android:layout_width="@dimen/a_5"
            android:layout_height="@dimen/a_5"
            android:layout_gravity="end|center_vertical"
            app:icon_focus_color="@color/collect_pink"
            app:icon_unfocus_color="@color/white"
            app:icon_icon="@drawable/icons_love"
            android:id="@+id/iv_collect"
            />

    </FrameLayout>


</FrameLayout>