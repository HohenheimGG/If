<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/A_9size"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/a_2size"
        android:text="提示"
        android:textColor="#111111"
        android:textSize="@dimen/H2_ts" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/a_3size"
        android:text="已识别该二维码内容为"
        android:textColor="#111111"
        android:textSize="@dimen/H3_ts" />

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/a_2size"
        android:textColor="#111111"
        android:textSize="@dimen/H3_ts" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/a_3size"
        android:background="#e5e5e5" />

    <Button
        android:id="@+id/cancel_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/a_2size"
        android:paddingBottom="@dimen/a_2size"
        android:text="取消"
        android:textColor="#666666"
        android:background="@null"
        android:textSize="@dimen/H1_ts" />

</LinearLayout>